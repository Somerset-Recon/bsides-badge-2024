void binaryPrint(String flag) { //prints string using two board leds (left=0, right=1)
  int zero = ATTACK_LED;
  int one = DEFEND_LED;
  int time_delay = 700;
  flag.trim();
  for (int i = 0; i <= sizeof(flag)/sizeof(flag[0]); i++) {
    std::bitset<8> binChar(flag.c_str()[i]);
    for (int bit = 7; bit >= 0; bit--) {
      if (binChar[bit] == 0) {
        digitalWrite(zero, 1);
        digitalWrite(one, 0);
      } else {
        digitalWrite(zero, 0);
        digitalWrite(one, 1);
      }
      delay(time_delay);
      digitalWrite(zero, 0);
      digitalWrite(one, 0);
      delay(time_delay / 2);
    }
  }
  return;
}

